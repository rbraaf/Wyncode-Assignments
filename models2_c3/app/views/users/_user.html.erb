<%= div_for(user) do %>
  Hello <%= user.name %>
  <p>Updated <%= time_ago_in_words user.updated_at %> ago.</p>
  <p>Created <%= time_ago_in_words user.created_at %> ago.</p>
  
  <%= form_for(user) do |f| %>
    <div class="field">
      <%= f.label  :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>
    <div class="field">
      <%= f.label :cohort %>
      <%= f.select :cohort, 1..3 %>
    </div>
    <div class="field">
      <%= f.label :cohort %>
      <%= f.number_field :cohort, in: 1..5 %>
    </div>
    <div class="field">
      <%= f.label :updated_at %>
      <%= f.time_field :updated_at %>
    </div>
    <div class="field">
      <%= f.label :updated_at %>
      <%= f.date_field :updated_at %>
    </div>
    <%= f.submit "Update this user" %> 
  <% end %>

<% end %>