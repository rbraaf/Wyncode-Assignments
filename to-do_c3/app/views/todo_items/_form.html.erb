<%= form_for([@list, @todo_item]) do |f| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
      <% @todo_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Operation:" %><br>
    <%= f.text_field :todo %>
  </div>
  <div class="field">
    <%= f.label "Mission Details" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "Completion Date" %><br>
    <%= f.date_select :due %>
  </div>
  <div>
    <%=  f.label "State" %><br>
    <%= f.number_field :state, in: 1..4 %>
  </div>
  <%= f.hidden_field :list_id, value: @list.id if @list %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
