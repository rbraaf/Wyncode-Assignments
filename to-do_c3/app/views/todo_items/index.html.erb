<table class="table table">
  <thead>
    <tr id="table_header">
      <th class="top_headers">Active Mission</th>
      <th class="top_headers">Mission Details</th>
      <th class="top_headers">TTC</th>
      <th class="top_headers">Completed Missions</th>
      <th class="top_headers">Mission Updates</th>
      <th class="top_headers">Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr id="data">
        <td><%= todo_item.todo %></td>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.due %></td>
        <% if todo_item.completed %>
        <td class="complete_icon"><%= link_to '', todo_item_path(todo_item, {todo_item:{completed: false}}), method: :put, class: "fa fa-check-square-o fa-2x" %></td>
        <% else %>
        <td class="complete_icon"><%= link_to '', todo_item_path(todo_item, {todo_item:{completed: true}}), method: :put, class: "fa fa-square-o fa-2x" %></td>
        <% end%>
        <td class="icon"><%= link_to '', edit_todo_item_path(todo_item), class: "fa fa-laptop fa-2x" %></td>
        <td class="icon"><%= link_to '', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-bomb fa-2x" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


