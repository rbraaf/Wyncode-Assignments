<h1 id="headline">Mission: Possible</h1>
<h4 id="subtitle">Mission Log</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Active Mission</th>
      <th>Mission Details</th>
      <th>ETA</th>
      <th>Completed</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.todo %></td>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.due %></td>
        <td><%= todo_item.completed %></td>
        <!-- <td><%= link_to 'Show', todo_item %></td> -->
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_todo_item_path %>
